<style>
  .big-text {
    font-size: 2rem;
    font-weight: bold;
    letter-spacing: 0.1rem;
    text-transform: uppercase;
    padding: 2rem;
    color: white;
  }
  .cursive{
    font-family: 'Brush Script MT', cursive;
  }
  .modernFont{
    font-family: 'Tahoma', sans-serif;
